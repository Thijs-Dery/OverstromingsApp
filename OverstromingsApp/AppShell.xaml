<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OverstromingsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OverstromingsApp.Views">

    <FlyoutItem Title="Tabel" Route="TabelPage">
        <ShellContent Title="Tabel" ContentTemplate="{DataTemplate views:TabelPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Grafiek" Route="GrafiekPage">
        <ShellContent Title="Grafiek" ContentTemplate="{DataTemplate views:GrafiekPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Filter" Route="FilterPage">
        <ShellContent Title="Filter" ContentTemplate="{DataTemplate views:FilterPage}" />
    </FlyoutItem>

    <FlyoutItem x:Name="ToevoegFlyout"
        Title="Toevoegen"
            Route="ToevoegPage">
        <ShellContent Title="Invoer"
                  ContentTemplate="{DataTemplate views:ToevoegPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Admin" Route="AdminPage" x:Name="AdminFlyout">
        <ShellContent Title="Beheer" ContentTemplate="{DataTemplate views:AdminPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Login" Route="LoginPage">
        <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginPage}" />
    </FlyoutItem>

</Shell>
