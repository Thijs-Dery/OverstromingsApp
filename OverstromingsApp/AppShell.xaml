<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OverstromingsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:OverstromingsApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Loginpagina als route -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Hoofdpagina na login -->
    <ShellContent
        Title="Tabel"
        Route="TabelPage"
        ContentTemplate="{DataTemplate views:TabelPage}" />

    <!-- Filterpagina -->
    <ShellContent
        Title="Filter"
        Route="FilterPage"
        ContentTemplate="{DataTemplate views:FilterPage}" />

    <!-- Beheerpagina -->
    <ShellContent
        Title="Admin"
        Route="AdminPage"
        ContentTemplate="{DataTemplate views:AdminPage}" />

    <!-- Wachtwoord vergeten -->
    <ShellContent
        Title="Wachtwoord Herstellen"
        Route="ForgotPasswordPage"
        ContentTemplate="{DataTemplate views:ForgotPasswordPage}" />

</Shell>
