<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OverstromingsApp.MainPage"
             BackgroundColor="White"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Logo -->
            <Image Source="aquafin.png" HeightRequest="100" HorizontalOptions="Center"/>

            <!-- Titel -->
            <Label Text="LOG IN" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <!-- Gebruikersnaam -->
            <Entry Placeholder="Gebruikersnaam..." x:Name="usernameEntry" />

            <!-- Wachtwoord -->
            <Entry Placeholder="Wachtwoord..." IsPassword="True" x:Name="passwordEntry" />

            <!-- Wachtwoord vergeten -->
            <Label Text="Wachtwoord vergeten?" TextColor="Blue" HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                </Label.GestureRecognizers>
            </Label>

            <!-- Inloggen knop -->
            <Button Text="Inloggen" Clicked="OnLoginClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>