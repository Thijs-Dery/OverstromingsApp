<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OverstromingsApp.AdminPage"
             Title="Gebruikersbeheer">

    <Grid Padding="20" ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Aquafin Logo -->
        <Image Source="aquafin_logo.png" HeightRequest="50" Grid.ColumnSpan="2" />

        <!-- Gebruikerslijst -->
        <ScrollView Grid.Column="0" Grid.Row="1">
            <VerticalStackLayout x:Name="UsersStack" Spacing="10" />
        </ScrollView>

        <!-- Formulier -->
        <VerticalStackLayout Grid.Column="1" Spacing="10" VerticalOptions="Start">
            <Label Text="Gebruiker toevoegen:" FontAttributes="Bold" />
            <Label Text="E-Mail:" />
            <Entry x:Name="EmailEntry" />
            <Label Text="Wachtwoord:" />
            <Entry x:Name="PasswordEntry" IsPassword="True" />
            <Button Text="Toevoegen" Clicked="OnAddClicked" />
        </VerticalStackLayout>

        <!-- Terug/User knoppen -->
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalOptions="End" Spacing="10" VerticalOptions="End">
            <Button Text="Terug" />
            <Button Text="User" />
        </StackLayout>
    </Grid>
</ContentPage>
