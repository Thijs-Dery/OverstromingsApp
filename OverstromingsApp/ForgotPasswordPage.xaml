<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OverstromingsApp.ForgotPasswordPage"
             BackgroundColor="White"
             Title="Wachtwoord vergeten">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Informatieve tekst -->
            <Label Text="Wachtwoord vergeten? Geen probleem, vul je e-mail in en we maken een aanvraag om je wachtwoord te resetten."
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- E-mail invoerveld -->
            <Entry x:Name="emailEntry"
                   Placeholder="E-mailadres" 
                   Keyboard="Email" />

            <!-- Aanvraag knop -->
            <Button Text="Aanvraag"
                    Clicked="OnRequestClicked" />

            <!-- Terug naar login -->
            <Button Text="Inloggen"
                    Clicked="OnBackToLoginClicked"
                    BackgroundColor="#eeeeee"
                    TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
