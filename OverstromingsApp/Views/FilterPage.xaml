<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OverstromingsApp.Views.FilterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- hoofdraster: 2 kolommen -->
    <Grid ColumnSpacing="30" Padding="20">
        <Grid.ColumnDefinitions>
            <!-- linkerkolom = filters (vaste breedte) -->
            <ColumnDefinition Width="320" />
            <!-- rechterkolom = resultaten (rest van het scherm) -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- =========  FILTERPANEEL  ========= -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout Spacing="18">

                <Label Text="Filter:" FontSize="20" FontAttributes="Bold" />

                <!-- Maand -->
                <Label Text="Maand" />
                <Picker ItemsSource="{Binding Maanden}"
                        SelectedItem="{Binding GeselecteerdeMaand}"
                        Title="Alle maanden" />

                <!-- Jaar -->
                <Label Text="Jaartal" Margin="0,10,0,0" />
                <Picker ItemsSource="{Binding Jaartallen}"
                        SelectedItem="{Binding GeselecteerdJaar}"
                        Title="Alle jaren" />

                <!-- Seizoen -->
                <Label Text="Seizoen" Margin="0,10,0,0" />
                <Picker ItemsSource="{Binding Seizoenen}"
                        SelectedItem="{Binding GeselecteerdSeizoen}"
                        Title="Alle seizoenen" />

                <!-- Neerslagbereik -->
                <Label Text="Hoeveelheid neerslag:" Margin="0,10,0,0" />
                <Label Text="{Binding NeerslagBereikLabel}" FontSize="12" />

                <!-- Minimum-slider -->
                <Slider Minimum="{Binding MinNeerslag}"
                        Maximum="{Binding MaxNeerslag}"
                        Value="{Binding MinFilterNeerslag}" />

                <!-- Maximum-slider -->
                <Slider Minimum="{Binding MinNeerslag}"
                        Maximum="{Binding MaxNeerslag}"
                        Value="{Binding MaxFilterNeerslag}" />

                <!-- Sorteren -->
                <Label Text="Sorteer op neerslag:" Margin="0,10,0,0" />
                <Switch IsToggled="{Binding SorteerAfdalend}" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- =========  RESULTATEN  ========= -->
        <ScrollView Grid.Column="1">
            <!--  TableContainer wordt in code-behind gevuld  -->
            <VerticalStackLayout x:Name="TableContainer" Spacing="6" />
        </ScrollView>
    </Grid>
</ContentPage>
