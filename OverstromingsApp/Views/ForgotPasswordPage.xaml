<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="OverstromingsApp.Views.ForgotPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wachtwoord vergeten">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Titel -->
            <Label Text="Wachtwoord vergeten?"
                   FontSize="24"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold" />

            <!-- Uitleg -->
            <Label Text="Geen probleem. Vul je e-mailadres in en we versturen instructies om je wachtwoord te resetten."
                   FontSize="16"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- E-mailveld -->
            <Entry x:Name="emailEntry"
                   Placeholder="E-mailadres"
                   Keyboard="Email"
                   FontSize="16" />

            <!-- Verstuurknop -->
            <Button Text="Aanvraag versturen"
                    Clicked="OnRequestClicked"
                    BackgroundColor="#4B82F1"
                    TextColor="White" />

            <!-- Terugknop -->
            <Button Text="Terug naar login"
                    Clicked="OnBackToLoginClicked"
                    BackgroundColor="#eeeeee"
                    TextColor="Black" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
