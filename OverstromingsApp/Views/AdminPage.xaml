<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    x:Class="OverstromingsApp.Views.AdminPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Gebruikersbeheer">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!-- Invoervelden -->
        <Entry x:Name="EmailEntry" Placeholder="E-mail" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Wachtwoord" IsPassword="True" />

        <!-- Toevoegen knop -->
        <Button Text="Gebruiker toevoegen" Clicked="OnAddClicked" />

        <!-- Gebruikerslijst -->
        <ScrollView>
            <VerticalStackLayout x:Name="UsersStack" Spacing="10" />
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>
